extends base.pug 

block scripts
    script(src="../static/index.js")

block style 
    style
      include ../static/style.css
      include ../static/stylecontact.css
    
block content   
    h1 Contact Us 
    form(action="/contact",method="post", class="myform", name="contactform" , onsubmit="return validateForm()")
        input(type="text",class="myinput",name="name",placeholder="Enter Your Name" , required) 
        input(type="tel",class="myinput",name="phone",placeholder="Enter Your Mobile number :- [ Format:-123-456-7891 ] " , pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" , required) 
        input(type="email",class="myinput",name="email",placeholder="Enter Your Mail id", required) 
        input(type="text",class="myinput",name="address",placeholder="Enter Your Address" ,  required) 
        input(type="integer",class="myinput",name="age",placeholder="Enter Your Age" , required)
        label(for='dance') Dance Styles
        select#styles(name='dancestyles' , placeholder=" Select the dance style " , class="myinput" , required)
         option(value='select') Select a Dance Style 
         option(value='Hip Hop') Hip Hop
         option(value='Contemporary') Contemporary
         option(value='Ballet') Ballet
         option(value='Folk dance') Folk dance
         option(value='Modern dance') Modern dance
         option(value='Jazz dance') Jazz dance  
         option(value='Samba') Samba
         option(value='Bharatanatyam') Bharatanatyam
         option(value='Kathakali') Kathakali

        button(class="btn")

          | Submit

        